<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/item_historic_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/item_historic_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/item_historic_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names"

        style="@style/TEXT_COLOR"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/segoe"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintStart_toEndOf="@+id/item_historic_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_historic_value"/>

    <TextView
        android:id="@+id/item_historic_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem"

        style="@style/TEXT_COLOR"
        android:fontFamily="@font/segoe"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"

        app:layout_constraintStart_toStartOf="@id/item_historic_name"
        app:layout_constraintTop_toBottomOf="@+id/item_historic_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_historic_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/us_zipcodes"

        android:fontFamily="@font/segoe"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="end"
        style="@style/TEXT_COLOR"

        app:layout_constraintStart_toEndOf="@id/item_historic_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>